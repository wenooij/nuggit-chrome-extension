{
  "manifest_version": 3,
  "name": "Nuggit",
  "version": "1.7",
  "description": "Extracts data from webpages as you browse them",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "nuggit.js"
      ]
    }
  ]
}